<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" 
    xmlns:cq="http://www.day.com/jcr/cq/1.0" 
    xmlns:jcr="http://www.jcp.org/jcr/1.0" 
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:allowedTemplates="[/conf/bike-store-trn/settings/wcm/templates/landing-page]"
        cq:template="/conf/bike-store-trn/settings/wcm/templates/root-page"
        jcr:primaryType="cq:PageContent" 
        jcr:title="Site root page" 
        sling:resourceType="bike-store-trn/components/page">
        <root jcr:primaryType="nt:unstructured" 
            sling:resourceType="bike-store-trn/components/container">
            <container jcr:primaryType="nt:unstructured" 
                sling:resourceType="bike-store-trn/components/container">
                <title jcr:primaryType="nt:unstructured" 
                    sling:resourceType="bike-store-trn/components/title" />
                <container jcr:primaryType="nt:unstructured" 
                    sling:resourceType="bike-store-trn/components/container"
                    layout="responsiveGrid" />
            </container>
        </root>
    </jcr:content>
</jcr:root>
